# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/redleads
REDIS_URL=redis://localhost:6379

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=RedLeads/1.0.0

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Authentication
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@redleads.com

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:3000

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
REDDIT_API_REQUESTS_PER_MINUTE=60
AI_API_REQUESTS_PER_MINUTE=100

# Feature Flags
ENABLE_AUTO_POSTING=false
ENABLE_AI_SCORING=true
ENABLE_NOTIFICATIONS=true